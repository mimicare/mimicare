{
  "name": "mimicare",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "description": "Comprehensive Maternal & Child Care Platform - Pregnancy tracking, telemedicine, postpartum care, and baby monitoring",
  "author": "Zahid Khan (@zahidkhandev)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "turbo run dev --filter=@mimicare/backend",
    "dev:frontend": "turbo run dev --filter=@mimicare/frontend",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=@mimicare/backend",
    "build:frontend": "turbo run build --filter=@mimicare/frontend",
    "start": "turbo run start",
    "start:backend": "yarn workspace @mimicare/backend start",
    "start:frontend": "yarn workspace @mimicare/frontend start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:backend": "turbo run lint --filter=@mimicare/backend",
    "lint:frontend": "turbo run lint --filter=@mimicare/frontend",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "test:backend": "yarn workspace @mimicare/backend test",
    "test:e2e": "yarn workspace @mimicare/backend test:e2e",
    "clean": "turbo run clean && rimraf .turbo",
    "clean:all": "yarn clean && rimraf **/node_modules **/.turbo **/dist **/generated",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,yaml,yml}\"",
    "db:generate": "yarn workspace @mimicare/schema db:generate",
    "db:migrate": "yarn workspace @mimicare/schema db:migrate",
    "db:migrate:create": "yarn workspace @mimicare/schema db:migrate:create",
    "db:migrate:deploy": "yarn workspace @mimicare/schema db:migrate:deploy",
    "db:push": "yarn workspace @mimicare/schema db:push",
    "db:pull": "yarn workspace @mimicare/schema db:pull",
    "db:studio": "yarn workspace @mimicare/schema db:studio",
    "db:seed": "yarn workspace @mimicare/schema db:seed",
    "db:reset": "yarn workspace @mimicare/schema db:reset",
    "db:validate": "yarn workspace @mimicare/schema db:validate",
    "db:format": "yarn workspace @mimicare/schema db:format",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:restart": "yarn docker:down && yarn docker:up",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:ps": "docker compose -f docker/docker-compose.yml ps",
    "docker:clean": "docker compose -f docker/docker-compose.yml down -v",
    "docker:db:up": "docker compose -f docker/docker-compose.db.yml up -d",
    "docker:db:down": "docker compose -f docker/docker-compose.db.yml down",
    "docker:db:restart": "yarn docker:db:down && yarn docker:db:up",
    "docker:db:logs": "docker compose -f docker/docker-compose.db.yml logs -f",
    "docker:db:clean": "docker compose -f docker/docker-compose.db.yml down -v",
    "docker:db:ps": "docker compose -f docker/docker-compose.db.yml ps",
    "docker:redis:up": "docker compose -f docker/docker-compose.redis.yml up -d",
    "docker:redis:down": "docker compose -f docker/docker-compose.redis.yml down",
    "docker:redis:restart": "yarn docker:redis:down && yarn docker:redis:up",
    "docker:redis:logs": "docker compose -f docker/docker-compose.redis.yml logs -f",
    "docker:redis:clean": "docker compose -f docker/docker-compose.redis.yml down -v",
    "docker:redis:cli": "docker exec -it mimicare-redis redis-cli -a mimicare123",
    "docker:localstack:up": "docker compose -f docker/docker-compose.localstack.yml up -d",
    "docker:localstack:down": "docker compose -f docker/docker-compose.localstack.yml down",
    "docker:localstack:restart": "yarn docker:localstack:down && yarn docker:localstack:up",
    "docker:localstack:logs": "docker compose -f docker/docker-compose.localstack.yml logs -f",
    "docker:localstack:clean": "docker compose -f docker/docker-compose.localstack.yml down -v",
    "docker:all:up": "yarn docker:db:up && yarn docker:redis:up && yarn docker:localstack:up",
    "docker:all:down": "yarn docker:db:down && yarn docker:redis:down && yarn docker:localstack:down",
    "docker:all:restart": "yarn docker:all:down && yarn docker:all:up",
    "docker:all:clean": "yarn docker:db:clean && yarn docker:redis:clean && yarn docker:localstack:clean",
    "docker:dev": "yarn docker:all:up && yarn db:generate && yarn db:migrate:deploy",
    "docker:dev:down": "yarn docker:all:down",
    "docker:dev:clean": "yarn docker:all:clean",
    "docker:health": "docker compose -f docker/docker-compose.yml ps && docker exec mimicare-db pg_isready -U postgres && docker exec mimicare-redis redis-cli -a mimicare123 ping",
    "docker:images:download": "cd scripts/docker && python download-docker-image.py batch images_to_download.txt",
    "docker:images:load": "node scripts/docker/load-images.js docker",
    "podman:up": "podman-compose -f docker/docker-compose.yml up -d",
    "podman:down": "podman-compose -f docker/docker-compose.yml down",
    "podman:restart": "yarn podman:down && yarn podman:up",
    "podman:logs": "podman-compose -f docker/docker-compose.yml logs -f",
    "podman:ps": "podman-compose -f docker/docker-compose.yml ps",
    "podman:clean": "podman-compose -f docker/docker-compose.yml down -v",
    "podman:db:up": "podman-compose -f docker/docker-compose.db.yml up -d",
    "podman:db:down": "podman-compose -f docker/docker-compose.db.yml down",
    "podman:db:restart": "yarn podman:db:down && yarn podman:db:up",
    "podman:db:logs": "podman-compose -f docker/docker-compose.db.yml logs -f",
    "podman:db:clean": "podman-compose -f docker/docker-compose.db.yml down -v",
    "podman:db:ps": "podman-compose -f docker/docker-compose.db.yml ps",
    "podman:redis:up": "podman-compose -f docker/docker-compose.redis.yml up -d",
    "podman:redis:down": "podman-compose -f docker/docker-compose.redis.yml down",
    "podman:redis:restart": "yarn podman:redis:down && yarn podman:redis:up",
    "podman:redis:logs": "podman-compose -f docker/docker-compose.redis.yml logs -f",
    "podman:redis:clean": "podman-compose -f docker/docker-compose.redis.yml down -v",
    "podman:redis:cli": "podman exec -it mimicare-redis redis-cli -a mimicare123",
    "podman:localstack:up": "podman-compose -f docker/docker-compose.localstack.yml up -d",
    "podman:localstack:down": "podman-compose -f docker/docker-compose.localstack.yml down",
    "podman:localstack:restart": "yarn podman:localstack:down && yarn podman:localstack:up",
    "podman:localstack:logs": "podman-compose -f docker/docker-compose.localstack.yml logs -f",
    "podman:localstack:clean": "podman-compose -f docker/docker-compose.localstack.yml down -v",
    "podman:all:up": "yarn podman:db:up && yarn podman:redis:up && yarn podman:localstack:up",
    "podman:all:down": "yarn podman:db:down && yarn podman:redis:down && yarn podman:localstack:down",
    "podman:all:restart": "yarn podman:all:down && yarn podman:all:up",
    "podman:all:clean": "yarn podman:db:clean && yarn podman:redis:clean && yarn podman:localstack:clean",
    "podman:dev": "yarn podman:all:up && yarn db:generate && yarn db:migrate:deploy",
    "podman:dev:down": "yarn podman:all:down",
    "podman:dev:clean": "yarn podman:all:clean",
    "podman:health": "podman-compose -f docker/docker-compose.yml ps && podman exec mimicare-db pg_isready -U postgres && podman exec mimicare-redis redis-cli -a mimicare123 ping",
    "podman:images:load": "node scripts/docker/load-images.js podman",
    "setup": "yarn install && yarn db:generate",
    "setup:dev": "yarn setup && yarn docker:dev",
    "setup:dev:podman": "yarn setup && yarn podman:dev",
    "check": "yarn type-check && yarn lint && yarn format:check",
    "fix": "yarn lint:fix && yarn format",
    "prepare": "husky install || true",
    "install:all": "yarn install",
    "reinstall": "yarn clean:all && yarn install",
    "upgrade": "yarn dlx npm-check-updates -u && yarn install"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  }
}
